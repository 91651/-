@inherits LayoutComponentBase
@using Toolbelt.Blazor.HotKeys
@inject IJSRuntime _jsRuntime
@inject HotKeys HotKeys

<PageTitle>遇见时光</PageTitle>

<header id="header">
    <div class="navbar">
        <div class="foryou">
            <p class="luck">@(久伴.初见.缘份)</p>
        </div>
    </div>
    <div class="header-navigation">
        <nav>
            <div class="logo"><a href="/">遇见时光</a></div>
            <h2 class="menu-trigger-icon" @onclick="()=>{isCollapsed = !isCollapsed;}"><Icon Type="menu-unfold" Theme="outline" Style="font-size:1.2em;"/></h2>
            <ul id="starlist" style="@(isCollapsed ? "display: none;" : "display: block;")"  >
                <li><a href="/">网站首页</a></li>
                <li><a href="timeline">时间轴</a></li>
                <li><a href="https://tools.1023.org.cn">在线工具</a></li>
            </ul>
            <SearchBox />
        </nav>
    </div>
</header>

<article>
    <main>
        @Body
    </main>
    <RightSide />
</article>
<footer>
    <p>Copyright © 遇见时光(31023.xyz), 2020  本站展示页面由.net core & Blazor 技术呈现</p>
</footer>
<a href="#" class="cd-top">Top</a>

@code {
    private bool isCollapsed = true;
    protected override void OnInitialized()
    {
        HotKeys.CreateContext().Add(ModKeys.Ctrl|ModKeys.Alt, Keys.L, MyLucky);
    }

    private void MyLucky()
    {
        _jsRuntime.InvokeVoidAsync("console.info", "%c%s", "color: #9399; font-size: 12px;", @久伴.初见.缘份);
        _jsRuntime.InvokeVoidAsync("console.info", "%c ", $"padding:70px;background:url({@久伴.照片.照片_201804_2}) no-repeat;");
    }
}